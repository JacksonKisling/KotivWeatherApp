@model IEnumerable<Business.Models.ApiLogRecord>
@{
    ViewData["Title"] = "API Log";
}

<h2>API Log</h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Timestamp</th>
            <th>Url</th>
            <th>Status</th>
            <th>Response</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var log in Model)
        {
            <tr>
                <td>@log.Timestamp.ToLocalTime()</td>
                <td>@log.RequestUrl</td>
                <td>@log.StatusCode</td>
                <td>
                    <pre>@log.ResponsePayload</pre>
                </td>
            </tr>
        }
    </tbody>
</table>
